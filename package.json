{
  "name": "nexus-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:arcana": "npm run dev -w apps/arcana",
    "dev:codex": "npm run dev -w apps/codex",
    "build:arcana": "npm run build -w apps/arcana",
    "build:codex": "npm run build -w apps/codex",
    "build:core": "npm run build -w packages/nexus-core",
    "build:all": "npm run build:core && npm run build:arcana && npm run build:codex",
    "lint": "npm run lint -w apps/arcana && npm run lint -w apps/codex",
    "test": "vitest run",
    "seed:arcana": "npx tsx scripts/seed.ts arcana",
    "seed:codex": "npx tsx scripts/seed.ts codex"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^3"
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
